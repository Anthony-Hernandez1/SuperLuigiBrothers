#ifndef ENEMY_H
#define ENEMY_H
#include <iostream>
#include <algorithm>
#include "SDL_Plotter.h"
#include "Player.h"
#include "Collisions.h"
class Enemy {
public:

    int width;
    int height;
    int velX;
    int velY;
    //int hp;
    int posX;
    int posY;
    int hp;
    int posY2,
        posX2;

//************************************************************
// Description: constructor that sets the initial values     *
// Return: none                                              *
// Precondition: none                                        *
// Postcondition: nine                                       *
//************************************************************
    Enemy()
    {
        width = 74;
        height = 22;
        velX = 0;
        velY = 0;
        posX2 = 460;
        posY2 = 200;
        posX = 40;
        posY = 530;
        hp = 1;
    }


//************************************************************
// Function: move                                            *
// Description: This allows the enemy to move by increasing  *
//          and decreasing the the x position by 5 and using *
//          that for the volocity of x and y                 *
// Return: none                                              *
// Precondition:that the enemy actually needs to move        *
// Postcondition: the enemy is where it needs  to be         *
//                                                           *
//************************************************************
    void move(int xOffset, int yOffset)   // allows you to move
    {
        posY = min(max(posY + yOffset, 0), windowHeight - height-40);
        velX = posX -5;
        velY = posY +5;
    }

//************************************************************
// Function: moveLeft                                        *
// Description: moves the enemy to the left                  *
// Return: none                                              *
// Precondition:that the left key is pressed                 *
// Postcondition: the enemy is where it needs to be          *
//                                                           *
//************************************************************
    void moveLeft(int xOffset)
    {
        posX-=1;
    }

//************************************************************
// Function: moveRight                                       *
// Description: moves the enemy to the right                 *
// Return: none                                              *
// Precondition:that the right key is pressed                *
// Postcondition: the enemy is where it needs to be          *                                                    
//************************************************************
    void moveRight(int xOffset)
    {
        posX+=1;
    }
    
//************************************************************
// Function: gravity                                         *
// Description: allows gravity to exist for the enemy        *
// Return: none                                              *
// Precondition: none, gravity occurs in the game            *
// Postcondition: none                                       *                                                 
//************************************************************
    void gravity(int yOffset)
    {
        while (posY!= windowHeight-height-40){
        posY+=1;
        }
    }
    
//************************************************************
// Function: drawEnemy                                       *
// Description: draws the enemy to the screen                *
// Return: none                                              *
// Precondition: the enemy is called in the main             *
// Postcondition: the enemy is on the screen                 *
//************************************************************
    void drawEnemy(SDL_Plotter & g)
    {
        for (int col = posX; col < width + posX; col++)   // goes through all columns
        {
            for (int row = posY; row < height + posY; ++row)
            {
                g.plotPixel(col,row, 230,10,204);
            }
        }
    }
    
//************************************************************
// Function: drawEnemy2                                      *
// Description: draws second the enemy to the screen         *
// Return: none                                              *
// Precondition: the enemy is called in the main             *
// Postcondition: the enemy is on the screen                 *
//************************************************************
    void drawEnemy2(SDL_Plotter & g)
    {
        for (int col = posX2; col < width + posX2; col++)   // goes through all columns
        {
            for (int row = posY2; row < height + posY2; ++row)
            {
                g.plotPixel(col,row, 255, 153, 204);
            }
        }
    }
    
    

//************************************************************
// Function: move2                                           *
// Description: This allows the enemy to move by increasing  *
//          and decreasing the the x position by 5 and using *
//          that for the volocity of x and y                 *
// Return: none                                              *
// Precondition:that the enemy actually needs to move        *
// Postcondition: the enemy is where it needs  to be         *
//************************************************************
    void move2(int xOffset, int yOffset)   // allows you to move
    {
        posY2 = min(max(posY2 + yOffset, 0), windowHeight - height-40);
    }

//************************************************************
// Function: moveLeft2                                       *
// Description: moves the enemy to the left                  *
// Return: none                                              *
// Precondition:that the left key is pressed                 *
// Postcondition: the enemy is where it needs to be          *
//                                                           *
//************************************************************
    void moveLeft2(int xOffset)
    {
        posX2-=1;
    }

//************************************************************
// Function: moveRight2                                      *
// Description: moves the enemy to the right                 *
// Return: none                                              *
// Precondition:that the right key is pressed                *
// Postcondition: the enemy is where it needs to be          *                                                    
//************************************************************
    void moveRight2(int xOffset)
    {
        posX2+=1;
    }
    
//************************************************************
// Function: gravity                                         *
// Description: allows gravity to exist for the enemy 2      *
// Return: none                                              *
// Precondition: none, gravity occurs in the game            *
// Postcondition: none                                       *                                                 
//************************************************************
    void gravity2(int yOffset)
    {
        while (posY2!= windowHeight-height-40)
        {
             posY2+=1;
        }
    }
// mutators

//************************************************************
// Function: sets health                                     *
// Description: sets h to health(hp)                         *
// Return: none                                              *
// Precondition: the enemy is alive                          *
// Postcondition: there are lives left                       *                                                 
//************************************************************
    void setHealth(int h)
    {
        hp = h;
    }

//************************************************************
// Function: setPosX2                                        *
// Description: sets x to posX2                              *
// Return: none                                              *
// Precondition: the second enemy is displayed to the screen *
// Postcondition: the enemy is still on the screen           *                                                 
//************************************************************
    void setPosX2(int x)
    {
        posX = x;
    }

//************************************************************
// Function: setPosY2                                        *
// Description: sets y to posY2                              *
// Return: none                                              *
// Precondition: the second enemy is displayed to the screen *
// Postcondition: the enemy is still on the screen           *                                                 
//************************************************************
    void setPosY2(int y)
    {
        posY = y;
    }
// accessors

//************************************************************
// Function: getHealth                                       *
// Description: returns hp(health)                           *
// Return: returns hp(health)                                *
// Precondition: none                                        *
// Postcondition: none                                       *                                                 
//************************************************************
    int getHealth()
    {
        return hp;
    }

//************************************************************
// Function: get                                       *
// Description: returns hp(health)                           *
// Return: returns hp(health)                                *
// Precondition: none                                        *
// Postcondition: none                                       *                                                 
//************************************************************
    int getPosX2()
    {
        return posX2;
    }


//************************************************************
// Function: getPosX2                                        *
// Description: returns the y position                       *
// Return: integer/position of y                             *
// Precondition: none                                        *
// Postcondition: none                                       *                                                 
//************************************************************
    int getPosY2()
    {
        return posY2;
    }


//************************************************************
// Function: getWidth                                        *
// Description: allows the user to get the width             *
// Return: integer/ width                                    *
// Precondition: none                                        *
// Postcondition: none                                       *                                                 
//************************************************************
    int getWidth()
    {
        return width;
    }

//************************************************************
// Function: getHeight                                       *
// Description: allows the user to get heightnnn             *
// Return: integer/ height                                   *
// Precondition: none                                        *
// Postcondition: none                                       *                                                 
//************************************************************
    int getHeight()
    {
        return height;
    }

//destroy
    void die()
    {
       // if(Collision(Enemy e,Player p))
        //{
         //   ~Enemy;
        //}
    }


};
#endif //ENEMY_H
